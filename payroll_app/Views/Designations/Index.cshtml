@model IEnumerable<payroll_app.Models.repository.Designation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DesignationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DesignationCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DesignationFormula)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DesignationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DesignationCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DesignationFormula)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DesignationId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DesignationId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DesignationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
